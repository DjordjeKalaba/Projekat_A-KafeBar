<Page x:Class="Projekat_A_KafeBar.ProizvodiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekat_A_KafeBar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{DynamicResource Proizvodi_Title}">

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter i dugmad -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="{DynamicResource Proizvodi_Filter_Kategorija}" VerticalAlignment="Center" Margin="0,0,10,0"
                       Foreground="{DynamicResource ForegroundBrush}"/>
            <ComboBox x:Name="KategorijeComboBox" Width="200" SelectionChanged="KategorijeComboBox_SelectionChanged"
                      Background="{DynamicResource BackgroundBrush}"
                      Foreground="{DynamicResource ForegroundBrush}"/>
            <Button x:Name="DodajProizvodButton" Content="{DynamicResource Proizvodi_Button_Dodaj}" Margin="20,0,0,0" Width="130"
                    Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource ForegroundBrush}"
                    Click="DodajProizvod_Click"/>
            <Button x:Name="IzmijeniProizvodButton" Content="{DynamicResource Proizvodi_Button_Izmijeni}" Margin="10,0,0,0" Width="100"
                    Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource ForegroundBrush}"
                    Click="IzmijeniProizvod_Click"/>
            <Button x:Name="ObrisiProizvodButton" Content="{DynamicResource Proizvodi_Button_Obrisi}" Margin="10,0,0,0" Width="100"
                    Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource ForegroundBrush}"
                    Click="ObrisiProizvod_Click"/>
        </StackPanel>

        <!-- Tabela proizvoda -->
        <DataGrid x:Name="ProizvodiDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="{DynamicResource BackgroundBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  BorderBrush="{DynamicResource BorderBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{DynamicResource Proizvodi_Col_Naziv}" Binding="{Binding Naziv}" Width="*"/>
                <DataGridTextColumn Header="{DynamicResource Proizvodi_Col_Kategorija}" Binding="{Binding Kategorija}" Width="*"/>
                <DataGridTextColumn Header="{DynamicResource Proizvodi_Col_Cijena}" Binding="{Binding Cijena}" Width="*"/>
                <DataGridTextColumn Header="{DynamicResource Proizvodi_Col_Kolicina}" Binding="{Binding Kolicina}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
