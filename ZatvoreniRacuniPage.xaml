<Page x:Class="Projekat_A_KafeBar.ZatvoreniRacuniPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekat_A_KafeBar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{DynamicResource ZatvoreniRacuni_Title}"
      Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <TextBlock x:Name="NaslovTextBlock"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource ForegroundBrush}"
                   Margin="0 0 0 20"/>

        <!-- Tabela računa -->
        <DataGrid x:Name="RacuniDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  FontSize="16"
                  Background="{DynamicResource BackgroundBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  GridLinesVisibility="Horizontal"
                  BorderBrush="{DynamicResource BorderBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="ColID" Binding="{Binding IdRačuna}" Width="100"/>
                <DataGridTextColumn x:Name="ColSto" Binding="{Binding Sto}" Width="100"/>
                <DataGridTextColumn x:Name="ColIznos" Binding="{Binding Iznos}" Width="150"/>
                <DataGridTextColumn x:Name="ColVrijeme" Binding="{Binding VrijemeIzdavanja}" Width="200"/>
                <DataGridTextColumn x:Name="ColZaposleni" Binding="{Binding Zaposleni}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Dugme za pregled -->
        <Button x:Name="PregledajButton"
                Grid.Row="2"
                Width="200"
                Height="40"
                HorizontalAlignment="Center"
                Margin="0 20 0 0"
                Background="{DynamicResource PrimaryBrush}"
                Foreground="{DynamicResource ForegroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                Click="PregledajRacun_Click"/>
    </Grid>
</Page>
