<Window x:Class="Projekat_A_KafeBar.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_A_KafeBar"
        mc:Ignorable="d"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Icon="Icon.png"
        Title="AdminMain" 
        Height="900" Width="1700"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid x:Name="myGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDE PANEL -->
        <Border Grid.Column="0"
                Background="{DynamicResource PrimaryBrush}">
            <StackPanel>

                <!-- LOGO -->
                <Image Source="/Logo.png" Margin="42,37,42,37" VerticalAlignment="Top"/>

                <!-- TEMA COMBO -->
                <StackPanel Orientation="Horizontal" Margin="12" VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource Tema_Text}"
                               VerticalAlignment="Center" 
                               FontSize="20"
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,10,0"/>

                    <ComboBox x:Name="TemaComboBox"
                              Width="150" Height="35"
                              FontSize="18"
                              Background="{DynamicResource SecondaryBrush}"
                              Foreground="{DynamicResource ForegroundBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"
                              HorizontalContentAlignment="Center"
                              SelectionChanged="TemaComboBox_SelectionChanged">

                        <ComboBoxItem Content="{DynamicResource Tema_Narandžasta}" Tag="OrangeTheme"/>
                        <ComboBoxItem Content="{DynamicResource Tema_Tamna}" Tag="DarkTheme"/>
                        <ComboBoxItem Content="{DynamicResource Tema_Svijetla}" Tag="LightTheme"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="12" VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource Jezik_Text}"
               VerticalAlignment="Center" 
               FontSize="20"
               Foreground="{DynamicResource ForegroundBrush}"
               Margin="0,0,10,0"/>
                    <ComboBox x:Name="JezikComboBox"
              Width="150" Height="35"
              FontSize="18"
              Background="{DynamicResource SecondaryBrush}"
              Foreground="{DynamicResource ForegroundBrush}"
              BorderBrush="{DynamicResource BorderBrush}"
              HorizontalContentAlignment="Center"
              SelectionChanged="JezikComboBox_SelectionChanged" RenderTransformOrigin="0.722,0.521">

                        <ComboBoxItem Content="{DynamicResource Jezik_Srpski}" Tag="Srpski"/>
                        <ComboBoxItem Content="{DynamicResource Jezik_Engleski}" Tag="Engleski"/>

                    </ComboBox>
                </StackPanel>

                <!-- MENU LISTA -->
                <ListBox Background="Transparent"
                         BorderThickness="0"
                         Foreground="{DynamicResource ForegroundBrush}"
                         FontFamily="Segoe UI">

                    <!-- RADNICI -->
                    <ListBoxItem Selected="ListBoxItem_Selected_Radnici">
                        <StackPanel Orientation="Horizontal" Margin="12">
                            <materialDesign:PackIcon Kind="Worker" Width="26" Height="40"
                                                     Foreground="{DynamicResource ForegroundBrush}" 
                                                     Margin="0,0,12,0"/>
                            <TextBlock Text="{DynamicResource Radnici_Text}" FontSize="30"/>
                        </StackPanel>
                    </ListBoxItem>

                    <!-- PROIZVODI -->
                    <ListBoxItem Selected="ListBoxItem_Selected_Proizvodi">
                        <StackPanel Orientation="Horizontal" Margin="12">
                            <materialDesign:PackIcon Kind="Drink" Width="26" Height="40"
                                                     Foreground="{DynamicResource ForegroundBrush}" 
                                                     Margin="0,0,12,0"/>
                            <TextBlock Text="{DynamicResource Proizvodi_Text}" FontSize="30"/>
                        </StackPanel>
                    </ListBoxItem>

                    <!-- RAČUNI sa DROPDOWN MENIJEM -->
                    <StackPanel Orientation="Vertical" Margin="12">
                        <Button x:Name="btnRacuni"
                                Width="200" Height="40"
                                Background="Transparent"
                                Foreground="{DynamicResource ForegroundBrush}"
                                FontSize="20"
                                Click="btnRacuni_Click"
                                HorizontalContentAlignment="Left">

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Receipt" Width="26" Height="40"
                                                         Foreground="{DynamicResource ForegroundBrush}"
                                                         Margin="0,0,12,0"/>
                                <TextBlock Text="{DynamicResource Racuni_Text}" FontSize="30"/>
                                <TextBlock Text=" ▼" Margin="5,0,0,0"/>
                            </StackPanel>

                            <Button.ContextMenu>
                                <ContextMenu Background="{DynamicResource PrimaryBrush}" 
                                             Foreground="{DynamicResource ForegroundBrush}"
                                             FontSize="20">
                                    <MenuItem Header="{DynamicResource OtvoreniRacuni_Text}" Click="OtvoreniRacuni_Click"/>
                                    <MenuItem Header="{DynamicResource ZatvoreniRacuni_Text}" Click="ZatvoreniRacuni_Click"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </StackPanel>

                    <!-- KATEGORIJE -->
                    <ListBoxItem Selected="ListBoxItem_Selected_Kategorije">
                        <StackPanel Orientation="Horizontal" Margin="12">
                            <materialDesign:PackIcon Kind="Category" Width="26" Height="40"
                                                     Foreground="{DynamicResource ForegroundBrush}" 
                                                     Margin="0,0,12,0"/>
                            <TextBlock Text="{DynamicResource Kategorije_Text}" FontSize="30"/>
                        </StackPanel>
                    </ListBoxItem>

                    <!-- STOLOVI -->
                    <ListBoxItem Selected="ListBoxItem_Selected_Stolovi">
                        <StackPanel Orientation="Horizontal" Margin="12">
                            <materialDesign:PackIcon Kind="TableChair" Width="26" Height="40"
                                                     Foreground="{DynamicResource ForegroundBrush}"
                                                     Margin="0,0,12,0"/>
                            <TextBlock Text="{DynamicResource Stolovi_Text}" FontSize="30"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    
                    
                    <!-- ODJAVA -->
                    <ListBoxItem Selected="ListBoxItem_Selected_Odjava">
                        <StackPanel Orientation="Horizontal" Margin="12">
                            <materialDesign:PackIcon Kind="Logout" Width="26" Height="40"
                                                     Foreground="{DynamicResource ForegroundBrush}"
                                                     Margin="0,0,12,0"/>
                            <TextBlock Text="{DynamicResource Odjava_Text}" FontSize="30"/>
                        </StackPanel>
                    </ListBoxItem>

                </ListBox>
            </StackPanel>
        </Border>

        <!-- GLAVNI SADRŽAJ -->
        <Border Grid.Column="1"
                Background="{DynamicResource BackgroundBrush}">
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
        </Border>

    </Grid>
</Window>
