<Window x:Class="Projekat_A_KafeBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_A_KafeBar"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Icon="Icon.png"
        
        Title="Kafe bar" Height="500" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="DarkOrange" Offset="0.0" />
                    <GradientStop Color="#FFFFB43C" Offset="0.9" />
                </LinearGradientBrush>
            </Border.Background>
            <Image Source="/Logo.png" Margin="40,35,40,35"/>
        </Border>
        
        <Border Grid.Column="1">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FFFFB43C" Offset="0.2"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="265">
                <TextBlock Text="Kafe Bar - Prijava na sistem"
                           HorizontalAlignment="Center" FontSize="30" FontWeight="Bold"
                           Foreground="DarkSlateGray" FontFamily="Arial"
                           Margin="0,0,0,20" TextWrapping="Wrap" TextAlignment="Center"
                           MaxWidth="400" />
                <StackPanel>
                    <Label Content="Korisničko ime:" FontSize="14" FontWeight="SemiBold"
                           Foreground="DarkSlateGray" FontFamily="Arial" />
                    <TextBox Height="30" FontSize="22" x:Name="UsernameBox"
                        FontFamily="Arial"/>

                </StackPanel>
                <StackPanel>
                    <Label Content="Lozinka:" FontSize="14" FontWeight="SemiBold"
                           Foreground="DarkSlateGray" FontFamily="Arial" />
                    <PasswordBox Height="30" FontSize="22" x:Name="PasswordBox"
                                FontFamily="Arial" />
                </StackPanel>
                <Button Content="Prijava" Width="150" Height="40" Margin="0,20,0,0" FontSize="16"
                        FontWeight="Bold" Background="DarkSlateGray" Foreground="White"
                        HorizontalAlignment="Center" BorderBrush="Gray" BorderThickness="1"
                        FontFamily="Arial" Click="Prijava_Click"/>
            </StackPanel>


        </Border>
    </Grid>
</Window>
