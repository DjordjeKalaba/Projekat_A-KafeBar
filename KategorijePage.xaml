<Page x:Class="Projekat_A_KafeBar.KategorijePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekat_A_KafeBar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{DynamicResource Kategorije_Title}">

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Dugmad -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="{DynamicResource KategorijaButton_Dodaj}" Click="DodajKategoriju_Click" Margin="0,0,10,0"
                    Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource ForegroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"/>
            <Button Content="{DynamicResource KategorijaButton_Izmijeni}" Click="IzmijeniKategoriju_Click" Margin="0,0,10,0"
                    Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource ForegroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"/>
            <Button Content="{DynamicResource KategorijaButton_Obrisi}" Click="ObrisiKategoriju_Click"
                    Background="{DynamicResource SecondaryBrush}" Foreground="{DynamicResource ForegroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="KategorijeDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                  Background="{DynamicResource BackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="{DynamicResource BorderBrush}"
                  RowBackground="{DynamicResource BackgroundBrush}" AlternatingRowBackground="{DynamicResource HoverBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{DynamicResource Kategorija_Header_Naziv}" Binding="{Binding Naziv}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
